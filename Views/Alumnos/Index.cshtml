@model IEnumerable<AdministracionEscuela.Models.Alumno>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de alumnos</h2>

<p>
    @Html.ActionLink("Agregar nuevo alumno", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaInscripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInscripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.AlumnoID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.AlumnoID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.AlumnoID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Volver", "Index", "Home")
</div>